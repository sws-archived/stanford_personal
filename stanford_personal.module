    ),
    'name' => array(
      '#markup' => 'Sidebar Block',
    ),
    'actions' => array(
      '#type' => 'link',
      '#title' => t('edit'),
      '#href'  => 'block/stanford-personal-sidebar-block/edit',
    ),
  );

  $form['block_items']['stanford-personal-footer-block'] = array(
    'enabled' => array(
      '#type'          => 'checkbox',
      '#title'         => 'Enable the Footer Block',
      '#title_display' => 'invisible',
      '#default_value' => $block_visibility['stanford-personal-footer-block'],
    ),
    'name' => array(
      '#markup' => 'Footer Block',
    ),
    'actions' => array(
      '#type' => 'link',
      '#title' => t('edit'),
      '#href'  => 'block/stanford-personal-footer-block/edit',
    ),
  );

  $form['block_items']['jumpstart-footer-social-media--0'] = array(
    'enabled' => array(
      '#type'          => 'checkbox',
      '#title'         => 'Enable the Social Media Block',
      '#title_display' => 'invisible',
      '#default_value' => $block_visibility['jumpstart-footer-social-media--0'],
