/**
 * Returns wether or not the profile should be syncd with CAP
 * @return [type] [description]
 */
function stanford_personal_get_profile_sync_status() {
  $status = 1;
  $result = db_select('cap_api_profiles', 'cap')
    ->fields('cap', array('id', 'nid', 'sync'))
    ->range(0,1)
    ->orderBy('id', 'ASC')
    ->execute()
    ->fetchAssoc();

  if (!isset($result['sync'])) {
    throw new Exception("Could not find profile node in sync status");
  }

  $status = (int) $result['sync'];

  return $status;
}

/**
 * Returns a formatted date string on the last time cap synced.
 * @return string [description]
 */
function stanford_pesonal_get_formatted_sync_date() {
  $output = "";

  $last_sync = variable_get('stanford_cap_api_profiles_cron_last_run', 0);
  if (!$last_sync) {
    $last_sync = variable_get('install_time', 0);
  }

  $output .= date('m/d/Y h:i a', $last_sync);

  return $output;
}

/**
 * Returns the nid of the profile.
 * @return [type] [description]
 */
function stanford_personal_get_cap_profile_nid() {

  $nid = variable_get('stanford_personal_cap_profile_nid', 0);
  if (!$nid) {

    // Delete the saved profile_id as well.
    variable_del('stanford_personal_cap_profile_id');

    $result = db_select('cap_api_profiles', 'cap')
      ->fields('cap', array('id', 'nid'))
      ->range(0,1)
      ->orderBy('id', 'ASC')
      ->execute()
      ->fetchAssoc();

    if (!isset($result['nid'])) {
      throw new Exception("No Cap Profile Available");
    }

    $nid = $result['nid'];
    variable_set('stanford_personal_cap_profile_nid', $nid);
  }

  // Check to see if node exists!
  $node = node_load($nid);
  if (!$node) {
    variable_del('stanford_personal_cap_profile_nid');
    $nid = stanford_personal_get_cap_profile_nid();
  }

  return $nid;
}

/**
 * Returns the CAP profile id
 * @return [type] [description]
 */
function stanford_personal_get_cap_profile_profile_id() {
  $profile_id = variable_get('stanford_personal_cap_profile_id', 0);
  $nid = stanford_personal_get_cap_profile_nid();

  // Check to see if node exists!
  $node = node_load($nid);
  if (!$node) {
    variable_del('stanford_personal_cap_profile_nid');
    $profile_id = 0;
    stanford_personal_get_cap_profile_nid();
  }

  if (!$profile_id) {
    $result = db_select('cap_api_profiles', 'cap')
      ->fields('cap', array('id', 'nid', 'profile_id'))
      ->range(0,1)
      ->orderBy('id', 'ASC')
      ->execute()
      ->fetchAssoc();

    if (!isset($result['profile_id'])) {
      throw new Exception("No Cap Profile Available");
    }

    $profile_id = $result['profile_id'];
    variable_set('stanford_personal_cap_profile_id', $profile_id);
  }

  return $profile_id;
}


