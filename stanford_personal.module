/**
 * [stanford_personal_manage_pages_form description]
 * @param  [type] $form_state [description]
 * @return [type]             [description]
 */
function stanford_personal_manage_pages_form($form_state) {
  drupal_set_title('Manage Pages');

  // Remove 'Administration breadcrumb'
  _stanford_personal_fix_breadcrumb();

  // retrieve the data for the main-menu menu
  $tree = menu_tree_all_data('main-menu');

  $form['add_page_link'] = array(
    '#markup' => l('Add a new page','node/add/stanford-page', array('attributes' => array('class' => array('button')))),
    '#weight' => '-50',
    '#class'  => 'button',
  );

  // Identify that the elements in 'menu_items' are a collection, to
  // prevent Form API from flattening the array when submitted.
  $form['menu_items']['#tree'] = TRUE;

  // Iterate through each menu item
  foreach ($tree as $item) {

    // Create a form entry for this item.
    //
    // Each entry will be an array using the the unique id for that item as
    // the array key, and an array of table row data as the value.

    $link = $item['link'];

    $mlid = 'mlid:' . $link['mlid'];
    $path = $link['link_path'];

    $is_home = FALSE;

    if ($path == '<front>') {
      $path = variable_get('site_frontpage');
      $is_home = TRUE;
    }

    $nid = _stanford_personal_get_nid($link);
    $node = FALSE;

    if ($nid) {
      $node = node_load($nid);
    }

    $operations = array();

    if (!empty($node)) {

      $operations['edit'] = array(
        '#type' => 'link',
        '#title' => t('edit'),
        '#href' => $path . '/edit',
      );

      // Add a delete operation, but only if it's not the Home Page
      if (!$is_home) {
        $operations['separator'] = array(
          '#markup' => ' | ',
        );

        $operations['delete'] = array(
          '#type' => 'link',
          '#title' => t('delete'),
          '#href' => url($path . '/delete', array('absolute' => TRUE, 'query' => array('destination' => 'admin/stanford-personal/pages'))),
        );
      }
    } else {
      $operations['empty'] = array(
        '#markup' => 'N/A',
      );
    }

    // checkbox:
    // disabled if it's HOME
    // disabled if it's not a node
    // checked if it's a node, and it's published
    // unchecked if it's a node, and not published

    $enabled_checkbox = array(
        '#type' => 'checkbox',
        '#title' => 'Publish the page',
        '#title_display' => 'invisible',
    );

    if ($is_home) {
      $enabled_checkbox['#disabled'] = 'disabled';
    }

    if (!empty($node)) {
      $enabled_checkbox['#default_value'] = $node->status;
    } else {
      $enabled_checkbox = array('#markup' => 'N/A');
    }

    $form['menu_items'][$link['mlid']] = array(
      '#is_home' => $is_home,

      // We'll use a form element of type '#markup' to display the item name.
      'name' => array(
        '#markup' => l($link['link_title'],$link['link_path']),
      ),

      // Add the enabled checkbox.
      'enabled' => $enabled_checkbox,

      // Add the operations links created earlier.
      'actions' => $operations,

      // The 'weight' field will be manipulated as we move the items around in
      // the table using the tabledrag activity.  We use the 'weight' element
      // defined in Drupal's Form API.
      'weight' => array(
        '#type' => 'weight',
        '#title' => t('Weight'),
        '#default_value' => $link['weight'],
        '#delta' => 50,
        '#title_display' => 'invisible',
      ),
    );
  }
  // Now we add our submit button, for submitting the form results.
  //
  // The 'actions' wrapper used here isn't strictly necessary for tabledrag,
  // but is included as a Form API recommended practice.
  $form['actions'] = array('#type' => 'actions');
  $form['actions']['submit'] = array('#type' => 'submit', '#value' => t('Save'));
  return $form;
}

/**
 * Config form for "Manage Profile" page
 */
function stanford_personal_profile_form($form, &$form_state) {
  drupal_set_title('Manage Profile');

  // Remove 'Administration breadcrumb'
  _stanford_personal_fix_breadcrumb();

  // Add custom css
  drupal_add_css(drupal_get_path('module', 'stanford_personal') . "/css/stanford-personal-admin.css");

  // Block Preview
  $form['block_preview_title']['#markup'] = "<h3>Profile Preview</h3>";
  $block = module_invoke('views', 'block_view', 'profile_blocks-block');
  $form['block_preview']['#markup'] = $block['content']['#markup'];

  // If no cap module and working from stanford person content type end.
  if (!module_exists('stanford_cap_api_profiles')) {
    return $form;
  }

  $last_sync = stanford_pesonal_get_formatted_sync_date();
  $enabled = stanford_personal_get_profile_sync_status();
  $cap_nid = stanford_personal_get_cap_profile_nid();

  // CAP ONLY STUFF HERE

  $form['cap_profile_nid'] = array(
    '#type' => 'hidden',
    '#value' => $cap_nid,
  );

  $form['cap_actions'] = array(
    '#type' => 'fieldset',
    '#title' => t('Actions'),
    '#description' => t(''),
  );

  $form['cap_actions']['cap_sync_now'] = array(
    '#type' => 'button',
    '#value' => 'Sync profile information from CAP',
    '#executes_submit_callback' => TRUE,
    '#submit' => array('stanford_personal_cap_sync_now_submit'),
  );

  $form['cap_actions']['cap_edit_profile'] = array(
    '#type' => 'button',
    '#value' => 'Edit my profile',
    '#executes_submit_callback' => TRUE,
    '#submit' => array('stanford_personal_edit_profile_submit'),
  );

  $form['cap_settings'] = array(
    '#type' => 'fieldset',
    '#title' => t('Settings'),
    '#description' => t('Configuration settings for your CAP profile'),
  );

  $form['cap_settings']['enable_cap_sync'] = array(
    '#type' => 'checkbox',
    '#title' => t('Enable CAP integration'),
    '#description' => t('Last Sync: ') . $last_sync,
    '#default_value' => $enabled,
  );

  $form['cap_settings']['cap_submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save settings'),
  );

  return $form;
}

/**
 * Default submit handler
 * @param  [type] $form       [description]
 * @param  [type] $form_state [description]
 * @return [type]             [description]
 */
function stanford_personal_profile_form_submit($form, $form_state) {

  if (isset($form_state['values']['enable_cap_sync'])) {
    db_update('cap_api_profiles')
    ->fields(array(
      'sync' => $form_state['values']['enable_cap_sync'],
      ))
    ->condition('nid', $form_state['values']['cap_profile_nid'])
    ->execute();
  }

  drupal_set_message('CAP profile settings saved', 'status');
}

