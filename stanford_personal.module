function stanford_personal_blocks_form($form, &$form_state) {

  // Remove 'Administration breadcrumb'
  _stanford_personal_fix_breadcrumb();

  // Now we add our submit button, for submitting the form results.
  //
  // The 'actions' wrapper used here isn't strictly necessary for tabledrag,
  // but is included as a Form API recommended practice.

  // TODO: (i) links about what they are

//Decide where your blocks go. [Customize Design] link goes out (danger of leaving page without saving)
  $form['block_items']['#tree'] = TRUE;


  /**
   *  Profile Block
   *  TODO: enabled box needs to do something
   */

  $form['block_items']['stanford-personal-profile-block'] = array(
    'enabled' => array(
      '#type'          => 'checkbox',
      '#title'         => 'Enable the Profile Block',
      '#title_display' => 'invisible',
      '#default_value' => TRUE,
    ),
    'name' => array(
      '#markup' => 'Profile Block',
    ),
    'actions' => array(
      '#type' => 'link',
      '#title' => t('edit'),
      '#href'  => 'admin/stanford-personal/profile',
    ),
  );

  $block_visibility = array();
  $block_ids = array('stanford-personal-sidebar-block', 'stanford-personal-footer-block', 'jumpstart-footer-social-media--0');

  foreach ($block_ids as $id) {
    $block = block_load('bean',$id);
