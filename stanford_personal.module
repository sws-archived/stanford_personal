/**
 * [theme_stanford_personal_blocks_form description]
 * @param  [type] $variables [description]
 * @return [type]            [description]
 */
function theme_stanford_personal_blocks_form($variables) {
  $output = '';

  $output .= t('<p>On this page you can enable, disable and edit blocks of content. If you would like to manage their layout, visit the ' . l('customize design page', 'admin/stanford-personal/design') . '.</p>');

  $form = $variables['form'];

  $header = array(t('Enabled'), t('Block'), t('Actions'));
  $rows = array();

  foreach (element_children($form['block_items']) as $id) {
    $rows[] = array(
      'data' => array(
        drupal_render($form['block_items'][$id]['enabled']),
        drupal_render($form['block_items'][$id]['name']),
        drupal_render($form['block_items'][$id]['actions']),
      ),
   );
  }

  $table_id = 'block-items-table';

  $output .= theme('table', array(
    'header' => $header,
    'rows' => $rows,
    'attributes' => array('id' => $table_id),
  ));

  // And then render any remaining form elements (such as our submit button).
  $output .= drupal_render_children($form);

  return $output;
}

/**
 * [stanford_personal_blocks_form_submit description]
 * @param  [type] $form       [description]
 * @param  [type] $form_state [description]
 * @return [type]             [description]
 */
function stanford_personal_blocks_form_submit($form, &$form_state) {

  $blocks = stanford_personal_get_manage_blocks();

  foreach ($blocks as $module => $block_ids) {
    foreach ($block_ids as $id) {

      // Skip any misisng items.
      if (!isset($form_state['values']['block_items'][$id])) {
        continue;
      }

      if ($form_state['values']['block_items'][$id]['enabled']) {
        db_update('block')->fields(array(
          'visibility' => 0,
          'pages' => '',
          ))->condition('module', $module)->condition('delta', $id)->execute();
      }
      else {
        db_update('block')->fields(array(
          'visibility' => 0,
          'pages' => '*',
          ))->condition('module', $module)->condition('delta', $id)->execute();
      }

    }
  }

  drupal_set_message(t('The changes have been saved.'));
}

